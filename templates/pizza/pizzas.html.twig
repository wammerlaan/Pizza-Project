{% extends 'base.html.twig' %}
{% block body %}
        <div class="container">
            <div class="row">
                 {% for pizza in pizzas %}
                <div class="card ccard" style="width: 18rem;">
                     <img class="card-img-top" src="{{ pizza.image }}" alt="Card image cap">
                    <div class="card-body d-flex flex-column">
                         <h5 class="card-title">{{ pizza.name }}</h5>
                        <p class="card-text">{{ pizza.description }}</p>
                        <a href="{{ path('pizza_order', { id: pizza.id }) }}" class="btn btn-primary mt-auto">order</a>
                    </div>
                </div>
                 {% endfor %}
            </div>
        </div>
{% endblock %}