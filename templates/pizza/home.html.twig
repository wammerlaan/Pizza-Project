{% extends 'base.html.twig' %}
{% block body %}
    
    <div>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="container">
            <h2>categorien ({{ categories|length }})</h2>
            <div class="row">
                {% for category in categories %}
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="/files/{{ category.name }}pizza.jpg" alt="Card image cap">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ category.name }}</h5>
                        <p class="card-text">Pizza</p>
                        <a href="{{ path('pizza_showpizzas', { id: category.id}) }}" class="btn btn-primary mt-auto"> go to</a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>

    </div>

 {% endblock %}